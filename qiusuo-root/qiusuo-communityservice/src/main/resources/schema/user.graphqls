type User {
    id: ID!
    name: String!
    userId: String!
    avatarUrl: String
}

type UserRegisterInput {
    name: String!
    password: String!
}

type UserQuery extend type Query {
    userDetails: User!
    myCommunities(userId: ID!): [Community]!
}

type UserMutation extend type Mutation{
    registerUser(name: String): User!
    setActiveCommunity(communityId: ID!, userId: ID!): User!
    setActiveChannel(channelId: ID!, userId: ID!): User!
}
